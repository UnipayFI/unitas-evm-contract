{
  "name": "@unitas/usdu",
  "version": "0.0.0",
  "private": true,
  "main": "exports/exports.js",
  "types": "exports/exports.d.ts",
  "files": [
    "artifacts",
    "contracts",
    "deploy",
    "deployments",
    "scripts",
    "exports",
    "typechain"
  ],
  "scripts": {
    "install:foundry:deps": "forge install",
    "postinstall": "pnpm run install:foundry:deps",
    "build": "forge build",
    "clean": "rm -rf .turbo node_modules artifacts cache exports out forge-cache",
    "console": "chisel",
    "deploy:anvil:localNetwork": "anvil --chain-id 1337 --mnemonic \"$TEST_MNEMONIC\"",
    "deploy:anvil:localNetwork:background": "anvil --chain-id 1337 --mnemonic \"$TEST_MNEMONIC\" &",
    "deploy:anvil:localNetwork:background:ci": "anvil --chain-id 1337 &",
    "deploy:anvil:publicNetworkFork": "anvil --chain-id 1337 --fork-url $TEST_FORK_URL --mnemonic \"$TEST_MNEMONIC\"",
    "deploy:anvil:publicNetworkFork:background": "anvil --chain-id 1337 --fork-url $TEST_FORK_URL --mnemonic \"$TEST_MNEMONIC\" &",
    "node": "anvil",
    "size-contracts": "forge build --sizes",
    "test": "forge test -vvv",
    "test:coverage": "forge coverage",
    "test:debug": "forge test -vvvv",
    "test:gas": "forge test --gas-report",
    "test:e2eTestingDeployment": "npx wait-port 8545 && forge script script/e2eTestingDeployment.sol --rpc-url $ANVIL_RPC_URL --private-key $TEST_PRIVATE_KEY --ffi --broadcast",
    "test:e2eTestingDeployment:ci": "npx wait-port 8545 && forge script script/e2eTestingDeployment.sol --rpc-url http://127.0.0.1:8545 --private-key $TEST_PRIVATE_KEY --ffi --broadcast",
    "test:coverage:lending": "forge coverage --fork-url $TEST_FORK_URL --report lcov && lcov --ignore-errors unused --remove ./lcov.info -o ./lcov.info.p --include 'contracts/lending/tokens/USDu' &&  genhtml ./lcov.info.p -o coverage-lending-partial --branch-coverage",
    "test:deployCreate2": "npx wait-port 8545 && cast rpc anvil_setCode 0x4e59b44847b379578588920ca78fbf26c0b4956c 0x7fffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffe03601600081602082378035828234f58015156039578182fd5b8082525050506014600cf3"
  },
  "dependencies": {},
  "devDependencies": {
    "cross-env": "7.0.0",
    "dotenv": "16.0.3",
    "eslint": "8.29.0",
    "prettier": "2.8.1",
    "prettier-plugin-solidity": "1.1.0",
    "ts-generator": "0.1.1",

    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-foundry": "^1.1.3",
    "@nomicfoundation/hardhat-ignition": "^0.15.8",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.12",
    "@nomicfoundation/ignition-core": "^0.15.8",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.4.2",
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/contracts-upgradeable": "^5.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.6.0",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "chai": "^4.5.0",
    "envfile": "^6.22.0",
    "ethers": "^6.13.4",
    "graphql": "^16.10.0",
    "graphql-request": "^6.1.0",
    "hardhat": "^2.22.16",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "^1.0.10",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.4.0",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.7.2"
  }
}